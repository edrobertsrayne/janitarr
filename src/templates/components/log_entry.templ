package components

import "github.com/user/janitarr/src/logger"

templ LogEntry(entry logger.LogEntry) {
	<div class={ "card bg-base-100 shadow-sm mb-2", templ.KV("bg-error/10", entry.Type == logger.LogTypeError) }>
		<div class="card-body p-4">
			<div class="flex items-start gap-3">
				<div class="flex-shrink-0 mt-1">
					@LogIcon(entry.Type)
				</div>
				<div class="flex-grow">
					<div class="flex items-center gap-2 mb-1 flex-wrap">
						<span class="text-sm text-base-content/70">{ entry.Timestamp.Format("2006-01-02 15:04:05") }</span>
						@LogTypeBadge(entry.Type)
						if entry.ServerName != "" {
							<span class="text-sm font-medium">{ entry.ServerName }</span>
							<span class="text-xs text-base-content/50">({ entry.ServerType })</span>
						}
						if entry.IsManual {
							<span class="badge badge-warning badge-sm">Manual</span>
						}
					</div>
					<p class="text-sm">
						{ entry.Message }
					</p>
					if entry.Count > 0 {
						<p class="text-xs text-base-content/50 mt-1">
							Count: { string(rune(entry.Count + 48)) }
						</p>
					}
				</div>
			</div>
		</div>
	</div>
}

templ LogIcon(logType logger.LogEntryType) {
	if logType == logger.LogTypeCycleStart {
		<svg class="w-5 h-5 text-info" fill="currentColor" viewBox="0 0 20 20">
			<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
		</svg>
	} else if logType == logger.LogTypeCycleEnd {
		<svg class="w-5 h-5 text-success" fill="currentColor" viewBox="0 0 20 20">
			<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
		</svg>
	} else if logType == logger.LogTypeSearch {
		<svg class="w-5 h-5 text-secondary" fill="currentColor" viewBox="0 0 20 20">
			<path d="M9 9a2 2 0 114 0 2 2 0 01-4 0z"></path>
			<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a4 4 0 00-3.446 6.032l-2.261 2.26a1 1 0 101.414 1.415l2.261-2.261A4 4 0 1011 5z" clip-rule="evenodd"></path>
		</svg>
	} else if logType == logger.LogTypeError {
		<svg class="w-5 h-5 text-error" fill="currentColor" viewBox="0 0 20 20">
			<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
		</svg>
	}
}

templ LogTypeBadge(logType logger.LogEntryType) {
	if logType == logger.LogTypeCycleStart {
		<span class="badge badge-info badge-sm">Cycle Start</span>
	} else if logType == logger.LogTypeCycleEnd {
		<span class="badge badge-success badge-sm">Cycle End</span>
	} else if logType == logger.LogTypeSearch {
		<span class="badge badge-primary badge-sm">Search</span>
	} else if logType == logger.LogTypeError {
		<span class="badge badge-error badge-sm">Error</span>
	} else {
		<span class="badge badge-sm">{ logType }</span>
	}
}
